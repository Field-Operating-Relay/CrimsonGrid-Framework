<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>CrimsonGridProvider</defName>
		<label>provider</label>
		<description>Provides 10 bandwidth.</description>
		<thingClass>Building</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/Misc/MoisturePump</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
			<shadowData>
				<volume>(1.93,1,1.69)</volume>
				<offset>(-0.03,0,-0.1)</offset>
			</shadowData>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.9</fillPercent>
		<pathCost>50</pathCost>
		<rotatable>false</rotatable>
		<blockWind>true</blockWind>
		<castEdgeShadows>false</castEdgeShadows>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>2500</WorkToBuild>
			<Flammability>1.0</Flammability>
			<Beauty>-20</Beauty>
		</statBases>
		<tickerType>Normal</tickerType>
		<canOverlapZones>false</canOverlapZones>
		<size>(2,2)</size>
		<building>
			<destroySound>BuildingDestroyed_Metal_Medium</destroySound>
		</building>
		<costList>
			<Steel>100</Steel>
			<ComponentIndustrial>2</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>250</basePowerConsumption>
				<shortCircuitInRain>true</shortCircuitInRain>
			</li>
			<li Class="CompProperties_HeatPusher">
				<compClass>CompHeatPusherPowered</compClass>
				<heatPerSecond>6</heatPerSecond>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CrimsonGridFramework.CompProperties_BandwidthProvider">
				<bandwidthAmount>10</bandwidthAmount>
			</li>
			<li Class="CrimsonGridFramework.CompProperties_UpgradeableBuilding">
				<upgrades>
					<li>
						<additionalBandwidth>0</additionalBandwidth>
						<additionalPowerDraw>0</additionalPowerDraw>
						<AdditionalHeatPerSecond>0</AdditionalHeatPerSecond>
						<graphicData>
							<texPath>Things/Building/Power/WoodFiredGenerator</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(2,2)</drawSize>
							<shadowData>
								<volume>(1.93,1,1.69)</volume>
								<offset>(-0.03,0,-0.1)</offset>
							</shadowData>
						</graphicData>
					</li>
					<li>
						<workAmount>2500</workAmount>
						<additionalBandwidth>1</additionalBandwidth>
						<additionalPowerDraw>250</additionalPowerDraw>
						<AdditionalHeatPerSecond>10</AdditionalHeatPerSecond>
						<graphicData>
							<texPath>Things/Building/Power/WoodFiredGenerator</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(2,2)</drawSize>
							<shadowData>
								<volume>(1.93,1,1.69)</volume>
								<offset>(-0.03,0,-0.1)</offset>
							</shadowData>
						</graphicData>
						<ingredients>
							<Steel>75</Steel>
						</ingredients>
					</li>
				</upgrades>
			</li>
			<li Class="CrimsonGridFramework.CompProperties_BandwidthOverclock">
				<stages>
					<li>
						<BonusBandwidth>0</BonusBandwidth>
						<AdditionalHeatPerSecond>0</AdditionalHeatPerSecond>
						<PowerConsumption>0</PowerConsumption>
					</li>
					<li>
						<BonusBandwidth>1</BonusBandwidth>
						<AdditionalHeatPerSecond>2</AdditionalHeatPerSecond>
						<PowerConsumption>50</PowerConsumption>
					</li>
					<li>
						<BonusBandwidth>2</BonusBandwidth>
						<AdditionalHeatPerSecond>4</AdditionalHeatPerSecond>
						<PowerConsumption>150</PowerConsumption>
					</li>
					<li>
						<BonusBandwidth>3</BonusBandwidth>
						<AdditionalHeatPerSecond>8</AdditionalHeatPerSecond>
						<PowerConsumption>250</PowerConsumption>
					</li>
				</stages>
			</li>
		</comps>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<designationCategory>CrimsonGrid</designationCategory>
		<uiOrder>2100</uiOrder>
		<constructEffect>ConstructMetal</constructEffect>
		<constructionSkillPrerequisite>4</constructionSkillPrerequisite>
	</ThingDef>
	<ThingDef ParentName="BuildingBase">
