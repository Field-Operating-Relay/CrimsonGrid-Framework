            <Intellectual>6</Intellectual>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>CGF_PsychicWarcallReactor</li>
                    </thingDefs>
                </filter>
                <count>1</count>
